<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_my_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".LocalGangseoActivity">



    <ImageButton
        android:id="@+id/like_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_background"
        android:isScrollContainer="true"
        android:padding="10sp"
        android:scaleType="centerCrop"
        android:src="@drawable/like"
        android:elevation="20dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/menu_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_background"
        android:elevation="20dp"
        android:isScrollContainer="true"
        android:scaleType="center"
        android:src="@drawable/baseline_menu_24"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/round_shape_clicked"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:padding="7dp"
            tools:ignore="MissingClass">

            <Button
                android:id="@+id/button_restaurant"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_selector"
                android:elevation="5dp"
                android:text="맛집"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button_cafe"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_selector"
                android:elevation="5dp"
                android:text="카페"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button_tour"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_selector"
                android:elevation="5dp"
                android:text="문화/관광"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button_shopping"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:background="@drawable/btn_selector"
                android:drawablePadding="5dp"
                android:elevation="5dp"
                android:text="쇼핑"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />


    </LinearLayout>

</FrameLayout>